      <div class="layui-form-item" style="margin: 5%">
      <label class="">
      <span>审核意见</span>
      </label>
      <select class="layui-select" id="select-shyj" name="select-shyj" lay-verify="required" lay-filter="shyj-filter" style="width: 50%">
