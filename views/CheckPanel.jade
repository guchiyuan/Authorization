      <textarea class="" name="input-allowShyj" id="input-allowShyj" cols="40" rows="5" style="width: 100%; margin-top: 10px">
      </textarea>
      </div>
      </div>
    #div-refuseShyj(style='display: none')
      // <form class="layui-form">
      .layui-form-item(style='margin: 5%')
        label
          span 审核意见
        select#select-shyj.layui-select.select-refuseshyj(name='select-shyj', lay-verify='required', lay-filter='shyj-filter', style='width: 50%')
          //
            <option selected="selected" disabled="disabled">请选择</option>
            <option value="其它意见">其它意见</option>
      // </form>
      .layui-form-item.refuseShyj(style='margin: 5%;')
        label
          span 其它意见
        textarea(name='input-refuseShyj', id='', cols='40', rows='5', style='width: 100%; margin-top: 10px')
